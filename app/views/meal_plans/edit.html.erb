    <div class="container">
      <h1 class="text-center"> <strong>Your Meal Plan</strong></h1>
      <p class="text-center">Adjust your mealplan</p>
      <!-- AddToAny BEGIN -->
      <div class="zindex-tooltip:: 1070 !default vw-100 pr-1">
      <div class="a2a_kit" data-a2a-url="http://www.coolcucumbers.de/meal_plans/<%= @plan.id %>">
