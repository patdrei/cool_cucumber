<div class="navbar navbar-expand-sm navbar-light">
  <%= link_to "/", class: "navbar-brand p-2" do %>
    <%= image_tag "logo.svg" %>
    <% end %>


    <div class="d-flex">
    <!-- <i class="fas fa-search icon mr-4 m-2"></i> -->

    <% if user_signed_in? %>
       <p class="btn btn-outline-danger align-self-end"> <%= link_to('Logout', destroy_user_session_path, method: :delete) %> </p>
      <form class="form-inline">
        <%= link_to destroy_user_session_path, { class: "btn btn-outline-danger", method: "delete",  style: "text-decoration:none;" } do %>
          <span>Logout</span>
        <% end %>
      </form>
    <% else %>
      <form class="form-inline">
        <%= link_to new_user_session_path, { class: "btn btn-outline-success",  style: "text-decoration:none;" } do %>
          <span>Login</span>
       <% end %>
      </form>
    <% end %>
  </div>
</div>

