<div class="shopping_list_items_banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1592439024378-20881ffeed8e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80)">
 <%= link_to "Back to Meal Plan", edit_meal_plan_path(@meal_plan), :class => "btn btn-primary", :id => "btn-lg"%>
</div>

<div class = "shopping_list_item_card">
  <div class="justify-content-center p-3 text-center">
  <h4 class="font-c-3 border-bottom pb-3">Your shopping list</h4>
</div>
<div class="justify-content-center pb-3 pl-3 pr-3 text-center">
  <% @shopping_list_items.each do |shopping_list_item| %>
  <%= link_to change_purchased_path(shopping_list_item), { method: "post",  style: "text-decoration:none; color:black;", remote: true } do %>
      <% if shopping_list_item.purchased  %>
        <div class="shopping_list_item_bought d-flex justify-content-between" style="border-bottom: 1px solid white;">
          <div class = "d-flex align-items-center text-left">
            <i class="fas fa-check-circle pr-2" style="font-size: 18px; color: rgb(104, 104, 104);"></i>
            <p style="max-width: 13ch;">  <%= shopping_list_item.ingredient.name %></p>
          </div>
          <div class ="d-flex">
            <p style="padding-right: 5px;">
              <% number = shopping_list_item.amount  %>
              <%= number == number.floor ? shopping_list_item.amount.round(0) : shopping_list_item.amount.round(0) %>
            </p>
            <p> <%= shopping_list_item.ingredient.standard_unit %></p>
          </div>
        </div>
      <% else %>
        <div class="shopping_list_item d-flex justify-content-between" style="border-bottom: 1px solid white;">
          <div class = "d-flex align-items-center text-left">
            <i class="far fa-circle pr-2" style="font-size: 18px; color: rgb(104, 104, 104);"></i>
            <p style="max-width: 13ch;">  <%= shopping_list_item.ingredient.name %></p>
          </div>
          <div class ="d-flex">
            <p style="padding-right: 5px;">
              <% number = shopping_list_item.amount  %>
              <%= number == number.floor ? shopping_list_item.amount.round(0) : shopping_list_item.amount.round(0) %>
            </p>
            <p> <%= shopping_list_item.ingredient.standard_unit %></p>
          </div>
        </div>
      <% end  %>
      <% end %>
  <% end  %>
  </div>
</div>



